<h1>Текущая сессия</h1>
<p>Ваш текущий баланс:<%= session[:credits] %></p>
<% if session[:login] %>
  <p><strong>Имя:</strong><%= session[:login] %></p>
  <p>
    <%= form_with(url: login_path, method: :delete) do %>
      <%= submit_tag("Выйти") %>
    <% end %>
  </p>
<% else %>
  <%= form_with(url: "/login") do %>
    <%= label_tag(:login, "Имя") %>
    <%= text_field_tag(:login) %>
    <%= label_tag(:login, "Пароль") %>
    <%= password_field_tag(:password) %>
    <%= submit_tag("Вход") %>
  <% end %>
<% end %>

